<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>
    <strong>Heading:</strong>
    <%= @post.heading %>
  </h1>

  <p>
    <%= @post.external_url %>
  </p>

  <div class="row">
    <div class="col-md-6">
      <% if @images.first.url %>
        <% @images.each do |image| %>
          <%= image_tag image.url, class: "showcaseimg" if image.url.present? %>
        <% end %>
      <% else %>
        <%= image_tag "http://english.tw/wp-content/themes/qaengine/img/default-thumbnail.jpg", class: "showcaseimg" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <p>
        <strong>Price:</strong>
        <%= @post.price %>
      </p>

      <p>
        <strong>Body:</strong>
        <%= @post.body %>
      </p>

      <p>
        <strong>City:</strong>
        <%= @post.city %>
      </p>

      <p>
        <strong>Timestamp:</strong>
        <%= @post.timestamp %>
      </p>

      <p>
        <strong>Listing type:</strong>
        <%= @post.listingtype %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= @post.address %>
      </p>

      <p>
        <strong>Source account:</strong>
        <%= @post.source_account %>
      </p>
    </div>
  </div>
</div>
